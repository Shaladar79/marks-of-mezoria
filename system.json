{
  "id": "marks-of-mezoria",
  "title": "Marks of Mezoria System",
  "description": "A barebones Foundry VTT system.",
  "version": "0.0.2.03",

  "authors": [
    {
      "name": "Shaladar"
    }
  ],

  "compatibility": {
    "minimum": "13",
    "verified": "13"
  },

  "esmodules": ["system.mjs"],
  "styles": ["styles/styles.css"],
  "template": "template.json",

  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],

  "packs": [ {
    "name": "abilities-racial",                 // filesystem + ID
    "label": "Abilities - Racial",              // what Foundry shows in UI
    "system": "marks-of-mezoria",               // MUST match your system id
    "path": "packs/abilities-racial",           // folder under your system root
    "type": "Item",                             // these are Item documents
    "private": false
  }
],
  "gridDistance": 5,
  "gridUnits": "ft",

  "url": "https://github.com/Shaladar79/marks-of-mezoria",
  "manifest": "https://raw.githubusercontent.com/Shaladar79/marks-of-mezoria/main/system.json",
  "download": "https://github.com/Shaladar79/marks-of-mezoria/archive/refs/heads/main.zip"
}
