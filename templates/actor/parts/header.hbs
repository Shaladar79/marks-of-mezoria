{{!-- templates/actors/parts/header.hbs --}}

<header class="sheet-header">

  {{!-- TOP ROW: Type ABOVE the portrait --}}
  <div class="header-top-row flexrow">
    <div class="type-field">
      <input type="text"
             value="{{actor.type}}"
             class="type-display"
             disabled />
    </div>
  </div>

  {{!-- MAIN ROW: Portrait + everything else --}}
  <div class="header-main-row flexrow">

    {{!-- PORTRAIT --}}
    <div class="profile">
      <img class="profile-img"
           src="{{actor.img}}"
           data-edit="img"
           title="{{actor.name}}" />
    </div>

    {{!-- RIGHT SIDE fields --}}
    <div class="header-fields">

      <div class="name-row">
        <input name="name"
               type="text"
               value="{{actor.name}}"
               placeholder="Name" />
      </div>

      <div class="meta-row flexrow">

        <div class="field">
          <label>Rank</label>
          <input type="text"
                 name="system.details.rank"
                 value="{{system.details.rank}}"
                 placeholder="Iron / Bronze / etc." />
        </div>

        {{!-- RACE DROPDOWN PARTIAL --}}
        {{> "systems/marks-of-mezoria/templates/actor/parts/drops/racedrop.hbs"}}

        <div class="field">
          <label>Role</label>
          <input type="text"
                 name="system.details.role"
                 value="{{system.details.role}}"
                 placeholder="Striker / Support / etc." />
        </div>

        <div class="field">
          <label>Background</label>
          <input type="text"
                 name="system.details.background"
                 value="{{system.details.background}}"
                 placeholder="Background" />
        </div>

      </div>
    </div>
  </div>
</header>
