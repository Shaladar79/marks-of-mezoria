{{!-- ================================
      TREASURE: RICHES
      - Gold
      - Cores by rank tier
      - Conversion labels (display only)
================================ --}}

<section class="treasure-riches">

  <h3>Riches</h3>

  <div class="grid grid-2col">

    {{!-- GOLD --}}
    {{#each treasureCurrency as |denom|}}
      <div class="field">
        <label>{{denom.label}}</label>
        <div class="flexrow">
          <input type="number"
                 name="system.treasure.currency.{{denom.key}}.value"
                 value="{{lookup (lookup ../system.treasure.currency denom.key) 'value'}}"
                 data-dtype="Number" />
          {{#if denom.conversion}}
            <span class="hint" style="margin-left:8px;">{{denom.conversion}}</span>
          {{/if}}
        </div>
      </div>
    {{/each}}

    {{!-- CORES --}}
    {{#each treasureCores as |core|}}
      <div class="field">
        <label>{{core.label}}</label>
        <div class="flexrow">
          <input type="number"
                 name="system.treasure.cores.{{core.key}}.value"
                 value="{{lookup (lookup ../system.treasure.cores core.key) 'value'}}"
                 data-dtype="Number" />
          {{#if core.conversion}}
            <span class="hint" style="margin-left:8px;">{{core.conversion}}</span>
          {{/if}}
        </div>
      </div>
    {{/each}}

  </div>

</section>
