<div class="attr-block attr-body">

  <div class="attr-block-header">Body Save</div>

  <div class="attr-save-row">
    <span class="attr-save-label">Value</span>
    <input type="number"
           name="system.attributes.body.saveValue"
           value="{{system.attributes.body.saveValue}}"
           data-dtype="Number"
           readonly />
