               value="{{system.attributes.body.swiftness.misc}}"
               data-dtype="Number" />
      </div>
      <div class="attr-col">
        <input type="number"
               name="system.attributes.body.swiftness.total"
               value="{{system.attributes.body.swiftness.total}}"
               data-dtype="Number"
               readonly />
      </div>
    </div>

    <div class="attr-grid-row">
      <div class="attr-col attr-col-name">Endurance</div>
      <div class="attr-col">
        <input type="number"
               name="system.attributes.body.endurance.race"
