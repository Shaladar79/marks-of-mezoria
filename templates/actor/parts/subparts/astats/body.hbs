      <div class="attr-col">
        <input type="number"
               name="system.attributes.body.might.misc"
               value="{{system.attributes.body.might.misc}}"
               data-dtype="Number" />
      </div>
      <div class="attr-col">
        <input type="number"
               name="system.attributes.body.might.total"
               value="{{system.attributes.body.might.total}}"
               data-dtype="Number"
               readonly />
      </div>
    </div>

    <div class="attr-grid-row">
      <div class="attr-col attr-col-name">Swiftness</div>
